<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeDetailsActivity"
    android:id="@+id/two_pane_tablet_layout">

    <!-- Master Fragment-->
    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:id="@+id/recipe_step_details_scrollview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants"
            tools:context=".RecipeDetailsActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dessert_image_details_fragment_iv"
                    android:layout_width="150dp"
                    android:layout_height="125dp" />

                <TextView
                    android:id="@+id/dessert_name_details_fragment_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    tools:text="Dessert Name" />

            </LinearLayout>

            <!-- Layout showing number of servings-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/makes" />

                <TextView
                    android:id="@+id/servings_size_details_fragment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/servings" />

            </LinearLayout>

            <!-- Recipe ingredients list-->
            <TextView
                android:id="@+id/ingredients_list_details_fragment_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="16sp"
                tools:text="10 tbsp granulated sugar" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- RecyclerView for step title cards -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/steps_recyclerview_details_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/recyclerview_background" />

            </FrameLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <!-- Divider line between fragments-->
    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"/>

    <!-- Fragment Step Details-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@color/recyclerview_background">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="15dp"
                android:id="@+id/exo_player_step_detail_fragment"/>

            <!-- Placeholder image shown if there is no Video for the step-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/no_video_available_iv"
                android:visibility="invisible"
                android:layout_marginTop="15dp"/>

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/step_details_tv_details_fragment"
            tools:text="Mix all ingredients into bowl and add as much deliciousness as possible"
            android:layout_margin="15dp"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:id="@+id/previous_button_step_details_fragment"
                android:text="@string/previous_button_text"
                android:textColor="#fff"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_arrow_back_white_24dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>

            <!-- White divider line between buttons-->
            <View
                android:layout_width="3dp"
                android:layout_height="50dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:id="@+id/next_button_step_details_fragment"
                android:text="@string/next_button_text"
                android:textColor="#fff"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_arrow_forward_white_24dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>